#vipSidebar
  background  #f4f4f4
  padding 20px
  padding-top 30px
  font-weight 600
  max-height 100%
  height 100%
  position fixed
  width 25%
  font-family 'PT Sans'
  .info
    min-height 100px
    .details
      font-color #000 
      .name
        margin-top 0
        font-weight 700
        font-family 'PT Sans'
        font-size 18px
        margin-bottom 5px
      .intro
        font-size 15px
        font-weight normal
        margin-bottom 3px
        font-family 'PT Sans'
      .role
        color  #989898
        margin-bottom 12px
      .connections
        font-weight 700
        font-family 'PT Sans'
        a
          color #989898
          text-decoration underline
          font-weight 300
          margin-left 5px
    .headshot
      width 67px
      margin-right 20px
      float left
      img
        width 67px
        height auto
      button
        margin-top 7px
        margin-right 7px
        color #666
        text-align center
        font-size  10px
        width  67px
        border-radius  2px
        border none
        background-color #e6e6e6
        font-weight 700
        font-family 'PT Sans'
        &:hover
          background-color #4c4c4c
          color white
          transition all 0.2s ease-in-out
  .about
    margin-bottom 10px
    padding-top 10px
    height 280px
    font-size 16px
    font-family 'Source Sans Pro', sans-serif
    font-weight 100
    color #888888
    border-top 1px solid #d6d6d6
    overflow-y scroll
  .recommend
    position absolute
    width 90%
    bottom 150px
    h3
      font-size 16px
      font-family 'PT Sans'
      font-weight 700
      border-bottom 1px solid #d6d6d6
      padding-bottom 10px
      margin-bottom 15px
    img
      margin-bottom 10px
      cursor pointer
    #carousel
      height 130px
      .infowrapper
        .name
          display none
          font-size 14px
          font-weight 700
          font-family 'PT Sans'
          margin-bottom 0
        .role
          display none
          font-size 10px
          color #646464
      .carousel-control
        width 0
        color #000
        &.left,&.right
          background-image none
          &.left
            left -26px
          &.right
            right -20px
        .glyphicon-chevron-left, .icon-prev, .glyphicon-chevron-right
          font-size 12px
          top 35%
        .glyphicon-chevron-left
          margin-left 0
          left -62%
        .glyphicon-chevron-right
          margin-right 0
          right -48%