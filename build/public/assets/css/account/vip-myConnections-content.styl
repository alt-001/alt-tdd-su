#vipMyConnectionsContent
  padding 20px
  padding-top 20px
  width 100%
  min-width 800px
  height 700px
  min-height 80%
  font-family 'PT Sans'
  .top-bar
    margin-bottom 20px
    padding-bottom 20px
    border-bottom 2px solid #d3d3d3
    height 60px
    font-size 18px
    font-weight 700
    .top-bar-header
      margin-top 8px
    select
      outline none
      border 0
      background-color transparent
      font-weight 600
      margin-top 12px
      width 98px
      -moz-appearance  none
      -webkit-appearance  none
      background transparent url("/assets/images/speechbubble.png") 110% 2px no-repeat
    form
      input
        &.search
          height 40px
          border 2px solid #d3d3d3
          border-right 0
          outline none
          color #646464
          padding-left 10px
          font-weight 100
          &:focus
            border 2px solid #d3d3d3
            border-right 0
      .addon
        height 40px
      button
        background-color transparent
        border 2px solid #d3d3d3
        border-left 0
        outline none
        &:focus
          outline none
          border 2px solid #d3d3d3
          border-left 0
        .glyphicon
          color #d1d1d1
  .connections
    img
      width 60px
  .pager
    position absolute
    bottom 20px
    width 95%
    border-top 1px solid #d3d3d3
    padding-top 10px
    li
      a
        border none
        font-family 'PT Sans'
        color grey
        background url("/assets/images/shape-1.png") center right no-repeat
        &:hover
          color black
    .previous
      a
        background url("/assets/images/shape.png") center left no-repeat
        